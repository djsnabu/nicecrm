---
import BaseLayout from '../../layouts/BaseLayout.astro';
import KanbanBoard from '../../components/KanbanBoard';
import LogoutButton from '../../components/LogoutButton';
import ProjectSummary from '../../components/ProjectSummary';
import MuistutusWidget from '../../components/MuistutusWidget';
import ThemeToggle from '../../components/ThemeToggle';
---
<BaseLayout title="Dashboard â€“ NiceCRM">
  <main class="min-h-screen p-6">
    <header class="flex flex-wrap items-center justify-between gap-4 mb-8">
      <div>
        <h1 class="text-2xl font-bold neon-text-cyan">NiceCRM</h1>
        <p class="text-slate-muted text-sm">Asiakkaat ja projektit</p>
      </div>
      <nav class="flex items-center gap-3">
        <a
          href="/dashboard"
          class="text-sm text-[var(--color-neon-cyan)] border-b border-[var(--color-neon-cyan)]/50 pb-0.5"
        >
          Yhteenveto
        </a>
        <a
          href="/dashboard/pipeline"
          class="text-sm text-slate-muted hover:text-[var(--color-neon-cyan)] transition-colors"
        >
          Myyntiputki
        </a>
        <a
          href="/dashboard/raportit"
          class="text-sm text-slate-muted hover:text-[var(--color-neon-cyan)] transition-colors"
        >
          Raportit
        </a>
        <ThemeToggle client:load />
        <LogoutButton client:load />
      </nav>
    </header>
    <section>
      <MuistutusWidget client:load />
    </section>
    <section class="mb-8">
      <ProjectSummary client:load />
    </section>
    <section>
      <KanbanBoard client:load />
    </section>
  </main>
</BaseLayout>
